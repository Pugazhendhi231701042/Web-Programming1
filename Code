type code

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Building Material Inventory Management System</title>
  <style>
    button{
      background-color: rgb(76, 175, 80);
    }
  </style>
</head>
<body>
  <form>

    <h3>Building Material Inventory</h3>
    <label for="materialName">Material Name:</label>
    <input type="text" id="materialName" placeholder="Enter material name">
    <label for="category">Material Category:</label>
    <select id="category">
      <option value="" disabled selected>Select</option>
      <option value="Cement">Cement</option>
      <option value="Steel">Steel</option>
      <option value="Wood">Wood</option>
    </select>
    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" placeholder="Enter quantity">
    <label for="supplierName">Supplier Name:</label>
    <input type="text" id="supplierName" placeholder="Enter supplier name">
    <label for="costPerUnit">Cost Per Unit:</label>
    <input type="number" id="costPerUnit" placeholder="Enter cost per unit">
    <button type="button" id="addMaterialBtn">Submit Material</button>
    <span id="error-message"></span>
    <label for="materialTable">Material List:</label>
    <table id="materialTable">
      <thead>
        <tr>
          <td>Material Name</td>
          <td>Category</td>
          <td>Quantity</td>
          <td>Supplier</td>
          <td>Cost Per Unit(Rs)</td>
        </tr>
      </thead>
      <tbody>
        
      </tbody>
    </table>
    <span id="totalProducts">0</span>
    <span id="mostExpensive">None</span>
  </form>
  <script>
    document.getElementById('addMaterialBtn').addEventListener('click',function(){
      const name=document.getElementById('materialName').value.trim();
      const cat=document.getElementById('category').value;
      const quan=document.getElementById('quantity').value.trim();
      const sup=document.getElementById('supplierName').value.trim();
      const cost=document.getElementById('costPerUnit').value.trim();
      const err=document.getElementById('error-message');
      if(name===""||cat===""||quan===""||sup===""||cost===""){
        err.textContent='Please fill out all fields!';
        return;
      }
      err.textContent='';
      const tbody=document.querySelector('#materialTable tbody');
      const row=document.createElement('tr');
      row.innerHTML=`<td>${name}</td><td>${cat}</td><td>${quan}</td><td>${sup}</td><td>${cost}</td>`;
      tbody.appendChild(row);
      const tp=document.getElementById('totalProducts');
      let t=parseInt(tp.textContent);
      tp.textContent=t+1;
      const me=document.getElementById('mostExpensive');
      const mec=me.textContent==='None'?{name:"",cost:0}:{name:me.textContent,cost:parseFloat(me.dataset.cost||0)};
      const ne=parseFloat(cost);
      if(ne>mec.cost){
        me.textContent=name;
        me.dataset.cost=ne;
      }
      document.getElementById('materialName').value='';
      document.getElementById('category').value='';
      document.getElementById('quantity').value='';
      document.getElementById('supplierName').value='';
      document.getElementById('costPerUnit').value='';
      
    });
  </script>
</body>
</html>



